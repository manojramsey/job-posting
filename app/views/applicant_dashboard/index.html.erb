<h1>ApplicantDashboard</h1>
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Employer Name</th>
      <th>Job Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unapplied.each do |post| %>
      <tr>
        <td><%= post.username %></td>
        <td><%= post.body %></td>
        <td><%= button_to 'Apply', applied_jobs_job_apply_path(:id => post.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
